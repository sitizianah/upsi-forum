<div class="container">
<p class="text-left text-info">Total <%= Bug.all.count %> bug(s) submitted by different users</p>
    <div class="row justify-content-center">
      <div class="col-lg-12">
        <% @bugs.each do |bug| %>
          <div class="card" style="width: 100%;">
            <div class="card-header">
              <div class="float-right">
                <%= link_to bug, method: :delete,data: { confirm: 'Are you sure?' } do %>
                  <button class="btn btn-danger btn-sm"><i class="fas fa-trash"></i></button>
                <% end %>
              </div>
              <% if bug.user.name %>
                <%= bug.user.name %>
              <% else %>
                <%= bug.user.email %>
              <% end %>
              <br>
              <span class="text-muted"><%= bug.created_at.strftime("%B, %d, %Y")%></span>
            </div>
            <ul class="list-group list-group-flush">
              <li class="list-group-item"><%= bug.message%></li>
            </ul>
          </div>
        <% end %>
        <%= link_to "Submit a bug", new_bug_path, :class=>"btn btn-info mt-1"%>
      </div>
    </div>
</div>
