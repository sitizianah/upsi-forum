<% provide(:page_title, 'Sign in to your account') %>
<div class="container">
  <div class="row justify-content-center" style="margin-top: 15vh">
    <div class="col-lg-6">
      <div class="text-center">
        <%= image_tag('origami.png', :size=>"80x120", :class=>"img-fluid")%>
        <h1 class="mb-3">Login - UPSI Forum</h1>
      </div>
      <div class="card rounded shadow">
        <div class="card-body">
          <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
            <div class="form-inputs">
              <%= f.input :email,
                          required: false,
                          autofocus: true,
                          input_html: { autocomplete: "email" } %>
              <%= f.input :password,
                          required: false,
                          input_html: { autocomplete: "current-password" } %>
            </div>

            <div class="form-actions">
              <%= f.button :submit, "Log in",:class=>"btn btn-primary" %>
              <%- if devise_mapping.registerable? && controller_name != 'registrations' %>
                <%= link_to "Sign up", new_registration_path(resource_name),:class=>"btn btn-info" %><br />
              <% end %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>