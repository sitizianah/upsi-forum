<% provide(:page_title, "Update Profile") %>

<div class="container">
  <div class="row justify-content-center">
    <div class="col-lg-12">
      <div class="card mb-2">
        <div class="card-body">
          <h2>Edit Account</h2>
          <hr>
          <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
            <%= f.error_notification %>

            <div class="form-inputs">
              <%= f.input :name, required: true, autofocus: true %>
              <%= f.input :profile_pic, label: 'Profile Image URL' %>
              <%= f.input :contact_number , hint: "Members will see your contact information too" %>
              <%= f.input :fb_link, label: 'Facebook Profile URL' %>
              <%= f.input :ig_link, label: 'Instagram Profile URL' %>
              <%= f.input :twitter_link, label: 'Twitter Profile URL' %>
              <%= f.input :in_link, label: 'LinkedIn Profile URL' %>
              <%= f.input :address %>

              <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
                <p>Currently waiting confirmation for: <%= resource.unconfirmed_email %></p>
              <% end %>

              <%= f.input :password,
                          hint: "leave it blank if you don't want to change it",
                          required: false,
                          input_html: { autocomplete: "new-password" } %>
              <%= f.input :password_confirmation,
                          label: 'Password Confirmation',
                          required: false,
                          input_html: { autocomplete: "new-password" } %>
              <%= f.input :current_password,
                          label: 'Current Password',
                          required: true,
                          input_html: { autocomplete: "current-password" } %>
            </div>

            <div class="form-actions">
              <%= f.button :submit, "Update", :class=>"btn btn-primary" %>
              <%= link_to "Back", root_path, :class=>"btn btn-dark"%>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>