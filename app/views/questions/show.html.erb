<div class="container-fluid">
  <div class="row justify-content-center">
    <div class="col-lg-11">
      <div class="card">
        <div class="card-body">
          <div class="float-left">
          <%= link_to questions_path do %>
            <button class="btn btn-secondary">
            <i class="fas fa-chevron-circle-left"></i>
            </button>
          <% end %>
          </div>
          <div class="float-right">
            <%= link_to 'Edit', edit_question_path(@question),:class=>"btn btn-info" %>
            <%= link_to 'Delete', question_path, method: :delete, data:{confirm: 'Are you sure?'},:class=>"btn btn-danger" %>
          </div>
          <p class="lead text-center">
            <strong><%= @question.title %></strong>
          </p>
          <p class="text-center">
            <%= image_tag(@question.image_link, :class=>"img-fluid rounded shadow", :size=>"520x650")%>
          </p>
          <p class="text-center text-muted text-italic">Asked <%=time_ago_in_words(@question.created_at) %> ago</p>
        </div>
      </div>
    </div>
  </div>
</div>