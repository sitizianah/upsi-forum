<% if current_user.contacts.count > 0 %>
  <div class="container">
    <div class="row justify-content-center">
      <div class="col-lg-12">
        <% @contacts.each do |contact| %>
          <div class="card" style="width: 100%;">
            <div class="card-header">
              <div class="float-right">
                <%= link_to contact, method: :delete,data: { confirm: 'Are you sure?' } do %>
                  <button class="btn btn-danger btn-sm"><i class="fas fa-trash"></i></button>
                <% end %>
              </div>
              <%= contact.created_at.strftime("%B, %d, %Y")%>
            </div>
            <ul class="list-group list-group-flush">
              <li class="list-group-item"><%= contact.message%></li>
            </ul>
          </div>
        <% end %>
      </div>
    </div>
  </div>
<% end %>

<% if current_user.contacts.count < 0 %>
  <div class="container">
    <div class="row justify-content-center">
      <div class="col-lg-12">
        <div class="alert alert-info" role="alert">
          You haven't contacted the Admin yet!
      </div>
      <%= link_to "Go, contact if necessary", new_contacts_path, :class=>"btn btn-info"%>
      </div>
    </div>
  </div>
<% end %>
